<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/image_button_icon_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_twotone_info_24"
                android:contentDescription="@string/account" />

            <ImageButton
                android:id="@+id/image_button_close_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_close"
                android:tint="@color/colorGreyLight"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_view_heading_dialog_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textSize="17sp"
                    android:text="@string/real_analysis"
                    android:gravity="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/text_view_person_dialogA_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:text="Person:"
                    android:gravity="start"/>

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text_view_person_dialogA_video_details"
                    android:text="@string/real_analysis"
                    android:gravity="end"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_view_filenameA_dialog_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:text="File:"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/text_view_filename_dialog_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text_view_filenameA_dialog_video_details"
                    android:text="@string/filename_ext"
                    android:gravity="start"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/text_view_size_dialog_video_detailsA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:gravity="start"
                    android:text="Size:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/text_view_size_dialog_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text_view_size_dialog_video_detailsA"
                    android:text="@string/_00mb"
                    android:gravity="end"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/text_view_duration_dialog_video_detailsA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:text="Duration:"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/text_view_duration_dialog_video_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text_view_duration_dialog_video_detailsA"
                    android:text="@string/_00_"
                    android:gravity="end"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_description_dialog_video_details"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/description" />

        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/image_button_type_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_twotone_school_24"
                android:tint="@color/colorGreyLight"
                android:contentDescription="@string/account" />

            <ImageButton
                android:id="@+id/image_button_share_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_twotone_share_24"
                android:tint="@color/colorGreyLight"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
