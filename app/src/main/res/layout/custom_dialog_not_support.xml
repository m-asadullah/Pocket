<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="275dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/image_button_notifier_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_notification"
                android:contentDescription="@string/bell" />

            <ImageButton
                android:id="@+id/image_button_close_dialog"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_close"
                android:contentDescription="@string/closedialog" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mobile"
                android:contentDescription="@string/mobile" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorGreyDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="@string/your_device"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:textColor="@color/colorWindowsDarkBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_supported"
                android:fontFamily="@font/google_sans_700"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorGreyDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_400"
                android:background="?selectableItemBackground"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/this_app_is_not_run_on_your_mobile_n_required_latest_version_nor_n_at_least_android_5_lollipop"/>

            <View android:layout_width="0dp"
                android:layout_height="15dp"/>
        </LinearLayout>

        <View
            android:background="@color/colorGreyDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textColor="@color/colorGreyDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/for_more_information"
            android:fontFamily="@font/google_sans_400"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:weightSum="3"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/image_view_course_dialog"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_school"
                    android:contentDescription="@string/website"
                    app:tint="@color/colorBlack" />

                <ImageView
                    android:id="@+id/image_view_website_dialog"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    app:srcCompat="@drawable/ic_web_globe"
                    android:contentDescription="@string/website"
                    app:tint="@color/colorBlack" />

                <ImageView
                    android:id="@+id/image_view_info_dialog"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    android:contentDescription="@string/website"
                    app:tint="@color/colorBlack" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
